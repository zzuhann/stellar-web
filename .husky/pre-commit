#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run lint-staged (ESLint, TypeScript check, Prettier)
npx lint-staged

# Run type check separately to ensure no type errors
echo "🔍 Running TypeScript type check..."
npm run type-check

echo "✅ Pre-commit checks passed!"
